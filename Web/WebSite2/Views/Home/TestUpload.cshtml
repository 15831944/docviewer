@{
    ViewBag.Title = "联系方式";
}

@{
    Layout = null;
}
<script src="/Resource/js/jquery-1.8.3.min.js" type="text/javascript"></script>
<script src="/Scripts/YapaiUploadApi.js"></script>
<div style="width:100%;height:800px;background:#fff;">
    <div style="margin:30px;float:left">

            <input type="file" id="testUpload" value="" />

    </div>
</div>
<script type="text/javascript">
    ypUpload.default.Resources = {
        uploadScript: '/Resource/uploadfy/jquery.uploadify.min.js',//uploadfy js地址
        uploadCss: '/Resource/uploadfy/uploadify.css',//uploadfy css地址
    }
    ypUpload.setUp("testUpload", {
        onUploadSuccess: function (file, data, response) {
            var data = $.parseJSON(data);
            ypUpload.info("上传成功");
            $("body").append("<img src='" + data.Document.ThumbUrl + "' >");
        }
    });
    ypUpload.start();
</script>