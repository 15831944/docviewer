                    <div class="log_t">
                        <table border="0" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>区域编号</td>
                                    <td>区域名称</td>
                                    <td>操作</td>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.AreaContracts.Count; i++)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@Model.AreaContracts[i].AreaNo</td>
                                        <td>@Model.AreaContracts[i].AreaName</td>
                                        <td>
                                            <a href="/Area/Update?id=@Model.AreaContracts[i].Id">编辑</a>
                                            <a href="/Area/Delete?id=@Model.AreaContracts[i].Id">删除</a>
                                        </td>
                                    </tr>
                                }
                                
                               
                               
                            </tbody>
                        </table>
                    </div>
