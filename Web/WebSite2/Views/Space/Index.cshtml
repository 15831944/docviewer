@model List<Services.Contracts.SpaceObject>
@{
    ViewBag.Title = "空间管理";
}

<div class="row-fluid">

    <div class="col-md-3">

        @Html.Partial("Shared/_ManageMenu", Model)

    </div>
    <div class="col-md-9 ">

        <ol class="breadcrumb">
            <li><a href="/Space/Index">空间</a></li>
            <li class="active">所有空间</li>
        </ol>

         <table class="table table-striped table-hover dataTable" id="edittable" aria-describedby="sample_editable_1_info">
	        <thead>
		        <tr role="row">
                    <th class="sorting_disabled" role="columnheader" rowspan="1" colspan="1"  aria-label="Username">名称</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="edittable" rowspan="1" colspan="1" aria-label="Full Name: activate to sort column ascending">大小</th>
                    <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="edittable" rowspan="1" colspan="1"  aria-sort="ascending" aria-label="Points: activate to sort column descending">最近更新</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_1" rowspan="1" colspan="1" aria-label="Notes: activate to sort column ascending">文档数量</th>
                    <th class="sorting" role="columnheader" tabindex="0" aria-controls="edittable" rowspan="1" colspan="1" aria-label="Delete: activate to sort column ascending">操作</th>
                </tr>
	        </thead>
       
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        
                        <td><a href="/Space/Detail?Id=@Model[i].Id">@Model[i].SpaceName</a></td>
                        <td>@Model[i].DisplayFileSize </td>
                        <td>@Model[i].UpdateTime </td>
                        <td>@Model[i].FileCount</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default"><a href="/Space/Delete?Id=@Model[i].Id">删除</a></button>
                                @*<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="/Document/Delete?Id=@Model[i].Id">删除</a></li>
                                </ul>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <script>
            jQuery(document).ready(function () {
                //App.init();
                TableEditable.init();
            });

	</script>
    </div>
</div>